{% extends 'base.html.twig' %}

{% block title %}Offer: {{ offer_detail }}{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-12">
            <h2 class="my-4">Offer</h2>
            <div style="box-shadow: 2px 3px 9px 4px rgba(0,0,0,0.04);">
                <div class="q-container-show p-4">
                    <div class="row">
                        <div class="col-2 text-center">
                            <img src="{{asset('images/bricks.png')}}" alt='Mallory Avatar' width="100" height="100">
                        </div>
                        <div class="col">
                            <h1 class="q-title-show">{{ offer_detail }}</h1>
                            <div class="q-display p-3">
                                
                                <p class="d-inline">Измазване на тухлена стена</p>
                                <p class="pt-4"><strong>За повече информация,кликнете тук</strong></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-between my-4">
        <h2 class="">Other offers <span style="font-size:1.2rem;">({{ offers|length }})</span></h2>
        <button class="btn btn-sm btn-secondary">Submit an Offer</button>
    </div>



    <ul class="list-unstyled">
        {% for offer in offers %}
            <li class="mb-4">
                <div class="d-flex justify-content-center">
                    <div class="mr-2 pt-2">
                        <img src="/images/tisha.png" width="50" height="50">
                    </div>
                    <div class="mr-3 pt-2">
                        {{ offer }}
                        <p>Simple paragraph</p>
                    </div>
                    <div class="vote-arrows flex-fill pt-2" style="min-width: 90px;">
                        <a class="vote-up" href="#"><i class="far fa-arrow-alt-circle-up"></i></a>
                        <a class="vote-down" href="#"><i class="far fa-arrow-alt-circle-down"></i></a>
                        <span>+ 6</span>
                    </div>
                </div>
            </li>
        {% endfor %}
    </ul>
</div>
{% endblock %}